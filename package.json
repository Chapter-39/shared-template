{
  "name": "@chapter-39/shared-template",
  "version": "0.3.1",
  "description": "Shared styles, types, config, etc.",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix && stylelint \"**/*.{css,scss}\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "stylelint": "stylelint \"**/*.{css,scss}\"",
    "build": "tsc -p tsconfig.build.json",
    "clean": "find types -type f -name '*.d.ts' -delete && find types -type f -name '*.d.ts.map' -delete",
    "pack": "npm pack",
    "prepack": "npm run clean && npm run build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/node": "^20.14.11",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.0",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.3.3",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "typescript": "^5.5.4"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,ts,jsx,tsx,vue,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,ts,jsx,tsx,vue}": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "types": "./types/index.d.ts",
  "files": [
    "types",
    "styles"
  ],
  "sass": "./styles/_index.scss",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "default": "./types/index.d.ts"
    },
    "./styles": "./styles/root.scss",
    "./styles/*": "./styles/*"
  },
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chapter-39/shared-template.git"
  },
  "bugs": {
    "url": "https://github.com/chapter-39/shared-template/issues"
  },
  "homepage": "https://chapter-39.vasa.me/",
  "author": "@3v69",
  "keywords": [
    "template",
    "eslint",
    "prettier",
    "husky",
    "styles",
    "scss",
    "types"
  ],
  "changelog": {
    "0.3.1": "- Fixed minor issues in styles and TypeScript definitions.\n- Improved build script to clean up old type definitions before building.\n- Updated dependencies to latest versions.",
    "0.3.0": "- Added new shared styles and updated existing ones.\n- Improved TypeScript definitions for better developer experience.\n- Enhanced linting rules and fixed existing issues.\n- Updated dependencies to latest versions.",
    "0.2.0": "- Updated dependencies to latest versions.\n- Added support for TypeScript 5.5.4.\n- Improved linting and formatting scripts.\n- Enhanced package structure for better maintainability.",
    "0.1.0": "- Initial setup with basic configurations and shared styles."
  }
}
