{
  "name": "@chapter-37/minimal-template",
  "version": "0.1.0",
  "description": "Shared styles, types, config, etc.",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,vue,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,ts,jsx,tsx,vue}": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "types": "./types/index.d.ts",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
